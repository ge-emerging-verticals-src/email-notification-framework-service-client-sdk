<?xml version="1.0" encoding="UTF-8"?>

<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>NOTIFICATION: %d{HH:mm:ss.SSS} %level | %thread | %-55logger{55} | %msg %n</pattern>
    </encoder>
  </appender>

  <logger name="com.ge" level="${LOGBACK_DEBUGLEVEL}"/>
  <logger name="org.springframework" level="INFO"/>

  <root level="${LOGBACK_DEBUGLEVEL}">          
    <appender-ref ref="STDOUT" />
  </root>  
  
</configuration>
